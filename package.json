{
  "name": "tellet-admin-cli",
  "version": "2.7.1",
  "description": "Admin tools for Tellet - auto-categorization, transcript export, media download, data export, bulk user management, and metadata management",
  "main": "tellet-admin-tool.js",
  "bin": {
    "tellet-admin": "./tellet-admin-tool.js",
    "tellet-wizard": "./tellet-wizard.js"
  },
  "files": [
    "*.js",
    "*.cmd",
    "*.md",
    "sample-*.csv",
    ".env.example"
  ],
  "scripts": {
    "start": "node tellet-admin-tool.js",
    "wizard": "node tellet-wizard.js",
    "categorize": "node auto-categorize-project.js",
    "start:ts": "ts-node auto-categorize-project.ts",
    "build": "tsc auto-categorize-project.ts --outDir dist --module commonjs --target es2020",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "format": "prettier --write '**/*.{js,json,md}'",
    "format:check": "prettier --check '**/*.{js,json,md}'",
    "validate": "npm run lint && npm run format:check && npm run test",
    "postinstall": "node -e \"console.log('\\nðŸŽ‰ Tellet Admin CLI installed successfully!\\nRun \\'tellet-wizard\\' to get started.\\n')\""
  },
  "dependencies": {
    "axios": "^1.6.0",
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "csv-parse": "^5.5.0",
    "csv-writer": "^1.6.0",
    "inquirer": "^8.2.6",
    "ora": "^5.4.1"
  },
  "optionalDependencies": {
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "axios-mock-adapter": "^1.22.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/telletai/tellet-admin-cli.git"
  },
  "homepage": "https://github.com/telletai/tellet-admin-cli#readme",
  "bugs": {
    "url": "https://github.com/telletai/tellet-admin-cli/issues"
  },
  "private": false
}
